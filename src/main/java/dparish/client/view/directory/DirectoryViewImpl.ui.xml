<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>

    <ui:style>
        .addPersonContainer {
            border-radius: 3px;
            box-shadow: 0 5px 15px #aaa;
            margin: 10px 0px 10px 50px;
            width: 400px;
            padding: 10px;
        }
    </ui:style>
    <g:FlowPanel>
        <g:SimplePanel ui:field="addPersonContainer" styleName="{style.addPersonContainer}"/>
    </g:FlowPanel>
</ui:UiBinder>