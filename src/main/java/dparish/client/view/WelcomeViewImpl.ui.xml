<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>

    <ui:with field="messages" type="dparish.client.resources.MainMessages"/>

    <ui:with field="res" type="dparish.client.resources.CommonResources"/>

    <g:FlowPanel styleName="{res.css.contentPanel}">
        <g:Label text="{messages.welcome}"/>
        <g:Label styleName="{res.css.floatLeft}">Current Locale: </g:Label>
        <g:Label ui:field="currentLocale"/>
        <g:Label styleName="{res.css.floatLeft}">Start Day of Week: </g:Label>
        <g:Label ui:field="startDay"/>
    </g:FlowPanel>
</ui:UiBinder>