<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>

    <ui:with field="messages" type="dparish.client.resources.MainMessages"/>

    <ui:with field="res" type="dparish.client.resources.CommonResources"/>

    <g:FlowPanel styleName="{res.css.contentPanel}">
        <g:FlowPanel styleName="{res.css.buttonPanel}">
            <g:Label ui:field="text" text="{messages.textTest}" styleName="{res.css.button} {res.css.floatLeft}"/>
            <g:Label ui:field="rotate" text="{messages.rotate}" styleName="{res.css.button} {res.css.floatLeft}"/>
            <g:Label ui:field="rotateCenter" text="{messages.rotateAroundCenter}"
                     styleName="{res.css.button} {res.css.floatLeft}"/>
            <g:SimplePanel styleName="{res.css.clear}"/>
        </g:FlowPanel>
        <g:SimplePanel ui:field="canvasContainer"/>
    </g:FlowPanel>
</ui:UiBinder>