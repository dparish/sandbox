<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>

    <ui:with field="messages" type="dparish.client.resources.MainMessages"/>

    <ui:with field="res" type="dparish.client.resources.CommonResources"/>

    <ui:style type="dparish.client.view.basiccanvas.BasicCanvasViewImpl.Style">
        .canvas {
            background: #fff;
            display: block;
            margin: 10px;
            box-shadow: 0 5px 15px #aaa;
        }
        .buttons {
            float:left;
        }
        .buttonPanel {
            padding: 0px 0px 20px 0px;
        }
        .clear {
            clear: both;
        }
    </ui:style>
    <g:FlowPanel styleName="{res.css.contentPanel}">
        <g:FlowPanel styleName="{style.buttonPanel}">
            <g:Label ui:field="rotate" text="{messages.rotate}" styleName="{res.css.button} {style.buttons}"/>
            <g:Label ui:field="text" text="{messages.textTest}" styleName="{res.css.button} {style.buttons}"/>
            <g:SimplePanel styleName="{style.clear}"/>
        </g:FlowPanel>
        <g:SimplePanel ui:field="canvasContainer"/>
    </g:FlowPanel>
</ui:UiBinder>