<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>

    <ui:with field="messages" type="dparish.client.resources.MainMessages"/>

    <ui:with field="res" type="dparish.client.resources.CommonResources"/>

    <g:FlowPanel styleName="{res.css.contentPanel}">
        <g:FlowPanel styleName="{res.css.buttonPanel}">
            <g:Label ui:field="start" text="{messages.start}" styleName="{res.css.button} {res.css.floatLeft}"/>
            <g:Label ui:field="stop" text="{messages.stop}" styleName="{res.css.button} {res.css.floatLeft}"/>
            <g:Label ui:field="left" text="{messages.left}" styleName="{res.css.button} {res.css.floatLeft}"/>
            <g:Label ui:field="right" text="{messages.right}" styleName="{res.css.button} {res.css.floatLeft}"/>
            <g:Label ui:field="reverse" text="{messages.reverse}" styleName="{res.css.button} {res.css.floatLeft}"/>
            <g:SimplePanel styleName="{res.css.clear}"/>
        </g:FlowPanel>
        <g:SimplePanel ui:field="canvasContainer"/>
    </g:FlowPanel>
</ui:UiBinder>